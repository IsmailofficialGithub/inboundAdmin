# ============================================
# Backend Environment Variables
# ============================================
# Copy this file to .env and fill in your actual values
# DO NOT commit .env to version control

# ============================================
# Server Configuration
# ============================================
# Port for the backend server
PORT=3020

# Node environment (development, production, test)
NODE_ENV=development

# Frontend URL for CORS and redirects
FRONTEND_URL=http://localhost:3010

# ============================================
# Supabase Configuration
# ============================================
# Supabase project URL (found in Supabase dashboard > Settings > API)
SUPABASE_URL=https://your-project-ref.supabase.co

# Supabase anonymous/public key (found in Supabase dashboard > Settings > API)
# This key is safe to expose in client-side code
SUPABASE_ANON_KEY=your_supabase_anon_key_here

# Supabase service role key (found in Supabase dashboard > Settings > API)
# âš ï¸ WARNING: Keep this secret! Never expose this in client-side code.
# This key bypasses Row Level Security (RLS) policies.
SUPABASE_SERVICE_ROLE_KEY=your_supabase_service_role_key_here

# ============================================
# Email Configuration (SendGrid)
# ============================================
# SMTP host (default: smtp.sendgrid.net for SendGrid)
SMTP_HOST=smtp.sendgrid.net

# SMTP port (587 for TLS, 465 for SSL)
SMTP_PORT=587

# SMTP username (for SendGrid, this is always "apikey")
SMTP_USER=apikey

# SMTP password / SendGrid API key
# Get this from SendGrid dashboard > Settings > API Keys
SMTP_PASS=your_sendgrid_api_key_here

# Email sender address (must be verified in SendGrid)
EMAIL_FROM=noreply@yourdomain.com
